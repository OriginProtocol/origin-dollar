  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Fork tests",
      "cwd": "${workspaceFolder}/contracts",
      "program": "${workspaceFolder}/contracts/node_modules/.bin/hardhat",
      "runtimeExecutable": "/usr/local/bin/node",
      "preLaunchTask": "copy-deployment-files",
      "args": [
        "test",
        "./test/**/*.fork-test.js"
      ],
      "envFile": "${workspaceFolder}/contracts/.env",
      "env": {
        "FORK": "true",
        "IS_TEST": "true",
      },
    }
  ]
}